
print("Para que possamos calcular a média dos seus alunos")
print("gostariamos que nos forneça alguns dados para o cadastro")
conta = str(input("Você já tem um cadastro realizado?"))

if conta == 'sim':
    print("-=-" * 20)
    print("Certo! Então responda as perguntas a seguir:")
    nota1 = int(input("Qual é a primeira nota do seu aluno:"))
    nota2 = int(input("Qual é a segunda nota do seu aluno: "))
    pontos = int(input("Quantos pontos serão colocados das atividades feitas em sala?"))
    print("-=-" * 20)
    calculo = (nota1 + nota2) / 2 + pontos
    print("A nota final do seu aluno será: {}".format(calculo))

if conta == 'não':
    print("-=-" * 20)
    print("Certo! Então começaremos com o seu cadastro")
    nome = str(input("Digite o seu nome:"))
    sobrenome = str(input("Agora, digite o seu sobrenome:"))
    idade = int(input("Nos forneça a sua idade:"))
    email = str(input("Digite o seu email para mandarmos o código de verificação: "))
    telefone = int(input("Digite o número do seu telefone: "))

    print("-=-" * 20)
    print("Pronto!")
    print("Cadastro finalizado!")
    print("-=-" * 20)

    nota3 = int(input("Digite a primeira nota do seu aluno: "))
    nota4 = int(input("Digite a segunda nota do seu aluno: "))
    pontos1 = int(input("Por fim, digite quantos pontos seu aluno tem em atividades em sala:"))
    calculo1 = (nota3 + nota4) / 2 + pontos1
    print("A nota final do seu aluno é {}".format(calculo1))
